{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2018"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "src",
    "removeComments": true,
    "paths": {
      "@src/*": ["src/*/index", "src/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "target": "es5",
    "types": ["jest"],
    "outDir": "dist",
  },
  "exclude": [
    "coverage",
    "node_modules",
    "babel.config.js",
  ]
}