{
	"moduleFileExtensions": [
		"ts",
		"js",
		"json",
		"node"
	],
	"moduleDirectories": [
		"node_modules",
		"src"
	],
	"transform": {
		"^.+\\.[t|j]s?$": "babel-jest"
	},
	"coveragePathIgnorePatterns": [
		"/node_modules/"
	],
	"collectCoverageFrom": [
		"src/**/*.{js,ts}",
		"!src/**/*.d.ts"
  ],
	"coverageReporters": [
		"lcov",
		"html",
		"text"
	]
}